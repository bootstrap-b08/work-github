<div class="container">

	<div class="row">
		<div class="col mt-3">
	<h3><span class = "px-4 bg-light">注文履歴一覧</span></h3>
	<div class="col-xs=9">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>購入日時</th>
					<th>購入者</th>
					<th>注文個数</th>
					<th>注文ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @orders.each do |order| %>
				<tr>
					<td><%= link_to admins_order_path(order.id) do %>
				      <%= order.created_at.strftime('%Y/%m/%d') %>
              <% end %>
          </td>
					<td><%= order.customer.family_name %>
						<%= order.customer.first_name %></td>
					<td><%= order.order_items.sum(:quantity) %></td>
					<td><%= order.order_status %></td>
				</tr>
				<% end %>
			</tbody>
		</table>
	</div>

	<div class = "row">
		<div class = "mx-auto">
			<%= paginate @orders %>
		</div>
	</div>


</div>
</div>
</div>
