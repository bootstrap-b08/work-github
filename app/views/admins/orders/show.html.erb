<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">

			<h3><span class = "px-4 bg-light">注文履歴詳細</span></h3>

		</div>
	</div>

	<div class = "row">
	<table class="table">
		<tbody>
			<tr>
				<th>購入者</th>
				<td>
					<%= link_to admins_customer_path(@order.customer.id) do %>
					<%= @order.customer.family_name %>
					<%= @order.customer.first_name %>
					<% end %>
				</td>
			</tr>
			<tr>
				<th>配送先</th>
				<td><%= @order.shipping_address %></td>
			</tr>
			<tr>
				<th>支払方法</th>
				<td><%= @order.payment_method %></td>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<td>
					<%= form_for @order, url:admins_order_status_path(@order.id), data: {"turbolinks" => false} do |f| %>
					<%= f.select :order_status, Order.order_statuses.keys.to_a %>
                	<%= f.submit '更新' %>
                	<% end %>
            	</td>
			</tr>
		</tbody>
	</table>
	</div>

	<div class = "row">
		<div class = "col-md-8">
			
	<table class="table table-striped">
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
				<th>製作ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% sum_all = 0 %>
			<% @order.order_items.each do |order_item| %>
			<tr>
				<td><%= order_item.item.name %></td>
				<td><%= order_item.order_price %></td>
				<td><%= order_item.quantity %></td>
				<td><%= sub_total = (order_item.order_price).to_i * order_item.quantity %>円
					<% sum_all += sub_total %></td>
				<td>
					<%= form_for order_item, url:admins_product_status_path(order_item.id) do |f| %>
					<%= f.select :product_status, OrderItem.product_statuses.keys.to_a %>
                	<%= f.submit '更新' %>
                	<% end %>
            	</td>
            </tr>
			<% end %>
		</tbody>
	</table>
		</div>
		<div class = "col-md-1">
			
		</div>
		<div class = "col-md-3">
			<div class = "row">
				<div class = "col-md-6">
				<p class = "font-weight-bold">商品合計</p>
				</div>
				<div class = "col-md-6">
				<p class = "text-right"><%= sum_all %>円</p>
				</div>
			</div>
			<div class = "row">
				<div class = "col-md-6">
				<p class = "font-weight-bold">送料</p>
				</div>
				<div class = "col-md-6">
				<p class = "text-right"><%= @order.shipping_cost %>円</p>
				</div>
			</div>
			<div class = "row">
				<div class = "col-md-6">
				<p class = "font-weight-bold">請求金額合計</p>
				</div>
				<div class = "col-md-6">
				<p class = "text-right font-weight-bold"><%= sum_all + @order.shipping_cost.to_i %>円</p>
				</div>
			</div>
			
		</div>

	
	</div>

</div>