<h2>注文履歴詳細</h2>
	<table class="table">
		<tbody>
			<tr>
				<th>購入者</th>
				<th><%= @order.customer.family_name %>
					<%= @order.customer.first_name %>
				</th>
			</tr>
			<tr>
				<th>配送先</th>
				<th><%= @order.shipping_address %></th>
			</tr>
			<tr>
				<th>支払方法</th>
				<th><%= @order.payment_method %></th>
			</tr>
			<tr>
				<th>注文ステータス</th>
				<th><%= @order.order_status %></th>
			</tr>
		</tbody>
	</table>

	<table class="table table-striped">
		<thead>
			<tr>
				<th>商品名</th>
				<th>単価（税込）</th>
				<th>数量</th>
				<th>小計</th>
				<th>製作ステータス</th>
			</tr>
		</thead>
		<tbody>
			<% @order.order_items.each do |item| %>
			<tr>
				<td><%= item.name %></td>
				<td><%= item.order_pricede %></td>
				<td><%= item.quantity %></td>
				<td><%= item.order_price %>
				<td><%= item.order_status %></td>
			</tr>
			<% end %>
		</tbody>
	</table>

	<table class="table">
		<tbody>
			<tr>
				<th>商品合計</th>
				<th><%= @order.name %></th>
			</tr>
			<tr>
				<th>送料</th>
				<th><%= @order.shipping_address %></th>
			</tr>
			<tr>
				<th>請求金額合計</th>
				<th><%= @order.payment_method %></th>
			</tr>
		</tbody>
	</table>