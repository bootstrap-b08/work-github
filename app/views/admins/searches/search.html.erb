<% if @range == '1' %>
	<div class = "container">

		<div class = "row my-5">
			<div class = "offset-md-1">
				<h3><span class = "px-4 bg-light">会員一覧</span></h3>
			</div>
		</div>

		<div class = "row">
			<div class = "col-md-11">
				<table class = "table table-hover">
					<thead class = "thead-light">
						<tr>
							<th>会員ID</th>
							<th>氏名</th>
							<th>メールアドレス</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<% @customers.each do |customer| %>
						<tbody>
							<tr>
								<td>
									<%= customer.id %>
								</td>
								<td>
									<%= link_to admins_customer_path(customer.id) do %>
										<%= customer.family_name %><%= customer.first_name %>
									<% end %>
								</td>
								<td>
									<%= customer.email %>
								</td>
								<td>
									<% if customer.is_deleted == false %>
										有効
									<% elsif customer.is_deleted == true %>
										退会済み
									<% end %>
								</td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>

		<div class = "row">
			<div class = "offset-md-4">
				<%= paginate @customers %>
			</div>
		</div>

	</div>
<% elsif @range == '2' %>
	<div class = "container">

		<div class = "row my-5">
			<div class = "offset-md-1">
				<h3><span class = "px-4 bg-light">商品一覧</span></h3>
			</div>
		</div>

		<div class = "row">
			<div class = "col-md-11 clearfix">
				<%= link_to new_admins_item_path do %>
					<button class = "float-right btn btn-success rounded-circle">+</button>
				<% end %>
			</div>
		</div>

		<div class = "row">
			<div class = "col-md-11">
				<table class = "table table-hover">
					<thead class = "thead-light">
						<tr>
							<th>商品ID</th>
							<th>商品名</th>
							<th>税抜価格</th>
							<th>ジャンル</th>
							<th>ステータス</th>
						</tr>
					</thead>
					<% @items.each do |item| %>
						<tbody>
							<tr>
								<td>
									<%= item.id %>
								</td>
								<td>
									<%= link_to item.name, admins_item_path(item.id) %>
								</td>
								<td>
									<%= item.price %>
								</td>
								<td>
									<%= item.genre.name %>
								</td>
								<td>
									<% if item.is_active == true %>
										販売中
									<% elsif item.is_active == false %>
										売切れ
									<% end %>
								</td>
							</tr>
						</tbody>
					<% end %>
				</table>
			</div>
		</div>

		<div class = "row">
			<div class = "offset-md-4">
				<%= paginate @items %>
			</div>
		</div>

	</div>
<% end %>