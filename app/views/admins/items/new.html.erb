<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">
			<h3><span class = "px-4 bg-light">商品新規登録</span></h3>
		</div>
	</div>

	<%= form_for(@item, url: admins_items_path) do |f| %>

		<!-- エラー表示 -->
		<% if @item.errors.any? %>
			<section>
	      		<h3>
	      			<%= pluralize(@item.errors.count, "error") %> prohibited this book from being saved:
	      		</h3>
				<ul>
					<% @item.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</section>
		<% end %>

		<div class = "row">
			<div class = "col-md-4">
				<%= f.attachment_field :image %>
			</div>
			<div class = "col-md-4">

				<div class = "row mb-3">
					<div class = "col-md-3">
						<%= f.label :商品名 %>
					</div>
					<div class = "col-md-9">
						<%= f.text_field :name, class: "w-75" %>
					</div>
				</div>

				<div class = "row mb-3">
					<div class = "col-md-3">
						<%= f.label :商品説明 %>
					</div>
					<div class = "col-md-9">
						<%= f.text_area :introduction, class: "w-75 py-4" %>
					</div>
				</div>

				<div class = "row mb-3">
					<div class = "col-md-3">
						<%= f.label :ジャンル %>
					</div>
					<div class = "col-md-9">
						<%= f.collection_select :genre_id, Genre.all, :id, :name %>
					</div>
				</div>

				<div class = "row mb-3">
					<div class = "col-md-3">
						<%= f.label :税抜価格 %>
					</div>
					<div class = "col-md-9">
						<%= f.number_field :price, class: "w-75" %><span class = "p-1">円</span>
					</div>
				</div>

				<div class = "row mb-3">
					<div class = "col-md-3" style = "font-size:13px;">
						<%= f.label :販売, :style => 'margin:0;' %><br>
						<%= f.label :ステータス %>
					</div>
					<div class = "col-md-9">
						<%= f.select 'is_active', options_for_select([['販売中',1],['売切れ',0]]), include_blank: "選択して下さい" %>
					</div>
				</div>

			</div>
		</div>

		<div class = "row">
			<div class = "col-md-11 clearfix">
				<%= f.submit '新規登録', class: "float-right btn btn-success rounded-pill" %>
			</div>
		</div>

	<% end %>

</div>