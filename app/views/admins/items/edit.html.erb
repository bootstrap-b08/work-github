<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">
			<h3><span class = "px-4 bg-light">商品編集</span></h3>
		</div>
	</div>

	<%= form_for(@item, url: admins_item_path(@item)) do |f| %>

		<!-- エラー表示 -->
		<% if @item.errors.any? %>
			<section>
	      		<h3>
	      			<%= pluralize(@item.errors.count, "error") %> prohibited this book from being saved:
	      		</h3>
				<ul>
					<% @item.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</section>
		<% end %>

		<div class = "col-md-9">
			<div class = "row">
				<div class = "col-md-6">
					<%= f.attachment_field :image %>
				</div>
				<div class = "col-md-6">
					<div class = "row mb-3">
					<%= f.label :商品名, class: "col-md-3 d-flex align-items-center" %>
					<%= f.text_field :name, class: "col-md-9" %>
					</div>
					<div class = "row mb-3">
					<%= f.label :商品説明, class: "col-md-3 d-flex align-items-center" %>
					<%= f.text_area :introduction, class: "col-md-9" %>
					</div>
					<div class = "row mb-3">
					<%= f.label :ジャンル, class: "col-md-3 d-flex align-items-center" %>
					<%= f.collection_select :genre_id, Genre.all, :id, :name %>
					</div>
					<div class = "row mb-3">
					<%= f.label :税抜価格, class: "col-md-3 d-flex align-items-center" %>
					<%= f.number_field :price, class: "col-md-8" %><span class = "col-md-1 pt-2">円</span>
					</div>
					<div class = "row mb-3">
					<%= f.label :販売ステータス, class: "col-md-3 d-flex align-items-center" %>
					<%= f.select 'is_active', options_for_select([['販売中',1],['売切れ',0]]), include_blank: "選択して下さい"%>
					</div>
				</div>
			</div>
		</div>

		<div class = "col-md-11 clearfix">
			<%= f.submit '変更を保存する', class: "float-right btn btn-success" %>
		</div>

	<% end %>

</div>