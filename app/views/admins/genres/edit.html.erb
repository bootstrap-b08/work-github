<div class = "container">

	<h3 class = "row"><span class = "bg-info">ジャンル編集</span></h3>

	<%= form_for(@genre, url: admins_genre_path) do |f| %>

		<% if @genre.errors.any? %>
			<section>
	      		<h3>
	      			<%= pluralize(@genre.errors.count, "error") %> prohibited this book from being saved:
	      		</h3>
				<ul>
					<% @genre.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</section>
		<% end %>

		<div class = "form-group">
			<div class = "row">
				<%= f.label :name, 'ジャンル', class: "col-xs-2 control-label" %>
				<div class = "col-xs-5">
					<%= f.text_field :name %>
				</div>
			</div>
		</div>

		<div class = "form-group">
			<div class = "row">
				<div class = "col-xs-3">
		  			<%= f.radio_button :is_active, :true %>
				</div>
		  		<%= f.label :is_active, "有効", value: :true, class: "col-xs-2 control-label" %>
			</div>
		</div>

		<div class = "form-group">
			<div class = "row">
				<div class = "col-xs-3">
				  	<%= f.radio_button :is_active, :false %>
				</div>
			  	<%= f.label :is_active, "無効", value: :false, class: "col-xs-2 control-label" %>
			</div>
		</div>

		<div class = "form-action">
			<div class = "row">
				<div class = "col-xs-3">
	  				<%= f.submit '変更を保存する', class:"btn btn-success" %>
				</div>
			</div>
		</div>

	<% end %>

</div>
