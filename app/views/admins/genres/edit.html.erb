<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">
			<h3><span class = "px-4 bg-light">ジャンル編集</span></h3>
		</div>
	</div>

	<%= form_for(@genre, url: admins_genre_path) do |f| %>

		<!-- エラー表示 -->
		<% if @genre.errors.any? %>
			<section>
	      		<h3>
	      			<%= pluralize(@genre.errors.count, "error") %> prohibited this book from being saved:
	      		</h3>
				<ul>
					<% @genre.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</section>
		<% end %>

		<div class = "row">
			<div class = "col-md-1">
				<%= f.label :name, 'ジャンル' %>
			</div>
			<div class = "col-md-2">
				<%= f.text_field :name %>
			</div>
			<div class = "col-md-1">
  				<%= f.radio_button :is_active, :true %>
	  			<%= f.label :is_active, "有効", value: :true %>
			</div>
			<div class = "col-md-1">
		  		<%= f.radio_button :is_active, :false %>
		  		<%= f.label :is_active, "無効", value: :false %>
			</div>
			<div class = "col-md-7">
				<%= f.submit '変更を保存する', class: "btn btn-primary rounded-pill" %>
			</div>
		</div>

	<% end %>

</div>
