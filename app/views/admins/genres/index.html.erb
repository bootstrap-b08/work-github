<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">
			<h3><span class = "px-4 bg-light">ジャンル一覧・追加</span></h3>
		</div>
	</div>

	<%= form_for(@genre, url: admins_genres_path) do |f| %>

		<!-- エラー表示 -->
		<% if @genre.errors.any? %>
			<section>
	      		<h3>
	      			<%= pluralize(@genre.errors.count, "error") %> prohibited this book from being saved:
	      		</h3>
				<ul>
					<% @genre.errors.full_messages.each do |message| %>
						<li><%= message %></li>
					<% end %>
				</ul>
			</section>
		<% end %>

		<div class = "row">
			<%= f.label :name, 'ジャンル', class: "mr-3 pt-2 control-label" %>
			<%= f.text_field :name %>

  			<%= f.radio_button :is_active, :true, class: "mt-3 mr-3 ml-2" %>
	  		<%= f.label :is_active, "有効", value: :true, class: "d-flex align-items-center" %>

		  	<%= f.radio_button :is_active, :false, class: "mt-3 mr-3 ml-4" %>
		  	<%= f.label :is_active, "無効", value: :false, class: "d-flex align-items-center" %>

			<%= f.submit '追加', class: "ml-4 btn btn-primary" %>
		</div>

	<% end %>

	<div class = "row">
		<div class = "col-md-6">
			<table class = "mt-5 table table-hover">
				<thead class = "thead-light">
					<tr>
						<th>ジャンル</th>
						<th>状態</th>
						<th></th>
					</tr>
				</thead>
				<% @genres.each do |genre| %>
					<tbody>
						<tr>
							<td>
								<%= genre.name %>
							</td>
							<td>
								<% if genre.is_active == true %>
									有効
								<% elsif genre.is_active == false %>
									無効
								<% end %>
							</td>
							<td>
								<%= link_to edit_admins_genre_path(genre.id) do %>
									<button class = "btn btn-primary">編集する</button>
								<% end %>
							</td>
						</tr>
					</tbody>
				<% end %>
			</table>
		</div>
	</div>

</div>