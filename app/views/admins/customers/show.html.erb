<div class = "container">

	<div class = "row my-5">
		<div class = "offset-md-1">

			<h3><span class = "px-4 bg-light"><%= @full_name %>さんの会員詳細</span></h3>

		</div>
	</div>

	<table class="table table-borderless">
		<tbody>
			<tr>
				<th>顧客ID</th>
				<td><%= @customer.id %>
					<div style="display:inline-block; background-color: skyblue;" class="rounded">
					<% if @customer.is_deleted == false %>
						有効会員
					<% elsif @customer.is_deleted == true %>
						退会済み
					<% end %>
					</div>
				</td>
			</tr>
			<tr>
				<th>氏名</th>
				<td><%= @full_name %></td>
			</tr>
			<tr>
				<th>フリガナ</th>
				<td><%= @full_name_kana %></td>
			</tr>
			<tr>
				<th>郵便番号</th>
				<td><%= @customer.postel_code %></td>
			</tr>
			<tr>
				<th>住所</th>
				<td><%= @customer.address %></td>
			</tr>
			<tr>
				<th>電話番号</th>
				<td><%= @customer.telephone_number %></td>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<td><%= @customer.email %></td>
			</tr>
		</tbody>
	</table>

	<%= link_to "編集する", edit_admins_customer_path(@customer.id), class: "btn-sm btn-success" %>

	<%= link_to "注文履歴一覧を見る", admins_orders_customer_path(@customer.id), class: "btn-sm btn-success" %>

</div>