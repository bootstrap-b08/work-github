<h2><%= @full_name %>さんの会員情報編集</h2>
	<%= form_for @customer, url: admins_customer_path(@customer.id), method: :patch do |f| %>
	<table class="table">
		<tbody>
			<tr>
				<th>顧客ID</th>
				<th><%= @customer.id %></th>
			</tr>
			<tr>
				<th>氏名</th>
				<th><%= f.text_field :family_name %></th>
				<th><%= f.text_field :first_name %></th>
			</tr>
			<tr>
				<th>フリガナ</th>
				<th><%= f.text_field :family_name_kana %></th>
				<th><%= f.text_field :first_name_kana %></th>
			</tr>
			<tr>
				<th>郵便番号</th>
				<th><%= f.text_field :postel_code %></th>
			</tr>
			<tr>
				<th>住所</th>
				<th><%= f.text_field :address %></th>
			</tr>
			<tr>
				<th>電話番号</th>
				<th><%= f.text_field :telephone_number %></th>
			</tr>
			<tr>
				<th>メールアドレス</th>
				<th><%= f.text_field :email %></th>
			</tr>
		</tbody>
	</table>

	<%= f.submit "変更を保存する", class: "btn btn-danger" %>

	<% end %>