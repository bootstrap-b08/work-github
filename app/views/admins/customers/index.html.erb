<div class="container">

	<div class="row">
		<div class="col mt-3">

			<h2>会員一覧</h2>

	<div class="row">
		<div class="col-12">
		  	<table class="table table-striped">
			<thead>
				<tr>
					<th>会員ID</th>
					<th>氏名</th>
					<th>メールアドレス</th>
					<th>ステータス</th>
				</tr>
			</thead>
			<tbody>
				<% @customers.each do |customer| %>
				<tr>
					<td><%= customer.id %></td>
					<td><%= link_to admins_customer_path(customer.id) do %>
						<%= customer.family_name + customer.first_name %>
						<% end %>
						</td>
					<td><%= customer.email %></td>
					<td>
						<% if customer.is_deleted == false %>
							有効会員
						<% elsif customer.is_deleted == true %>
							退会済み
						<% end %>
					</td>
				</tr>
				<% end %>
			</tbody>
			</table>
		</div>
	</div>

		</div>
	</div>
</div>
	<div class = "row">
		<div class = "mx-auto">
			<%= paginate @customers %>
		</div>
	</div>
  
