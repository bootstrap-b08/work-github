
<div class="col-lg-3">
  <table border="1" width="200" >
      <tr>
        <th style="textalign center">ジャンル検索</th>
      </tr>
      <% genres.each do |genre| %>
      <tr>
        <td style="border: none;">
          <%= link_to genre_items_path(genre), :style=>"color: black; text-decoration: none;" do %>
          <%= genre.name %>
          <% end %>
        </td>
      </tr>
      <% end %>
  </table>
</div>


<style>
  th {
    text-align: center;
    height: 30px;
    font-size: 20px;
  }
  td {
    height: 100px;
    font-size: 20px;
  }
</style>
