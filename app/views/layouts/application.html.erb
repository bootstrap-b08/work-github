<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header style = "height:200px;border-bottom:2px solid black">
      <div class = "container" style = "width:100%;">
        <div class = "row">
          <div class = "col-xs-12 clearfix">
            <div class = "header-left" style = "float:left;padding-top:50px;">
              <%= image_tag 'logo_img.png', size: '400x100' %>
            </div>
            <div class = "header-right" style = "float:right;">
              <ul class="nav navbar-nav navbar-right">
                <!-- 会員ログイン後 -->
                <% if customer_signed_in? %>
                  <li>
                    ようこそ、<%= current_customer.family_name %><%= current_customer.first_name %>さん！
                  </li>
                  <li>
                    <%= link_to "マイページ", customers_path %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", items_path %>
                  </li>
                  <li>
                    <%= link_to "カート", cart_items_path %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete %>
                  </li>
                <!-- 管理者ログイン後 -->
                <% elsif admin_signed_in? %>
                  <li>
                    <%= link_to "商品一覧", admins_items_path %>
                  </li>
                  <li>
                    <%= link_to "会員一覧", admins_customers_path %>
                  </li>
                  <li>
                    <%= link_to "注文履歴一覧", admins_orders_path %>
                  </li>
                  <li>
                    <%= link_to "ジャンル一覧", admins_genres_path %>
                  </li>
                  <li>
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete %>
                  </li>
                <!-- ログイン前 -->
                <% else %>
                  <li>
                    <%= link_to "About", homes_about_path %>
                  </li>
                  <li>
                    <%= link_to "商品一覧", items_path %>
                  </li>
                  <li>
                    <%= link_to "新規登録", new_customers_registration_path %>
                  </li>
                  <li>
                    <%= link_to "ログイン", new_customer_session_path %>
                  </li>
                <% end %>
              </ul>
            </div>
          </div>
        </div>
      </div>
    </header><!-- /header -->
    <div class = "container">
      <%= yield %>
    </div>
  </body>
</html>
