<!DOCTYPE html>
<html>
  <head>
    <title>WorkGithub</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.4.1/js/bootstrap.min.js"></script>
  </head>

  <body>
    <header>
      <div class = "container-fluid">
        <div class = "row pt-5">
          <div class = "col-md-3 pt-2">
            <%= link_to root_path do %>
              <%= image_tag 'logo_img.png', size: '300x100' %>
            <% end %>
          </div>

          <div class = "col-md-9 pt-5">
            <nav class = "float-right">
              <ul class = "nav bg-info">
                <!-- 管理者ログイン後 -->
                <% if admin_signed_in? %>
                  <li class = "nav-item ml-5">
                    <%= link_to "商品一覧", admins_items_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "会員一覧", admins_customers_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "注文履歴一覧", admins_orders_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "ジャンル一覧", admins_genres_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item mr-5 ml-5">
                    <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-warning" %>
                  </li>
                <!-- 会員ログイン後 -->
                <% elsif customer_signed_in? %>
                  <li class = "nav-item ml-5 pt-2">
                    ようこそ、<%= current_customer.family_name %><%= current_customer.first_name %>さん！
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "マイページ", customers_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "商品一覧", items_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "カート", cart_items_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item mr-5 ml-5">
                    <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-warning" %>
                  </li>
                <!-- ログイン前 -->
                <% else %>
                  <li class = "nav-item ml-5">
                    <%= link_to "About", homes_about_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "商品一覧", items_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item ml-5">
                    <%= link_to "新規登録", new_customers_registration_path, class: "btn btn-dark" %>
                  </li>
                  <li class = "nav-item mr-5 ml-5">
                    <%= link_to "ログイン", new_customer_session_path, class: "btn btn-warning" %>
                  </li>
                <% end %>
              </ul>
            </nav>

            <% if admin_signed_in? %>
              <div class = "col-md-1">
                <%= form_tag(admins_searches_path, method: :get) do %>
                  <%= text_field_tag(:word) %>
                  <%= select_tag 'range', options_for_select([['会員検索','1'],['商品検索','2']]) %>
                  <%= submit_tag '検索', class: "btn btn-primary" %>
                <% end %>
              </div>
            <% end %>
          </div>
        </div>

      </div>
    </header><!-- /header -->
    <%= yield %>
  </body>
</html>
