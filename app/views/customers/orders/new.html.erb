<h1>注文情報入力</h1>

<h3>支払い方法</h3>

<%= form_tag(orders_path, method: :post) do %>
<div class="">
  <h4>
    <%= radio_button_tag :payment_method, "クレジットカード"%>
    <%= label_tag :payment_method, "クレジットカード", value: :"クレジットカード"%>
  </h4>
</div>

<div class="">
  <h4>
    <%= radio_button_tag :payment_method, "銀行振込"%>
    <%= label_tag :payment_method, "銀行振込", value: :"銀行振込" %>
  </h4>
</div>
<% end %>

<h3>お届け先</h3>

<%= form_for(@address, url: addresses_path, method: :post) do |f| %>

<div class="">
  <h4>
    <%= f.radio_button :address, "ご自身の住所"%>
    <%= f.label :address, "ご自身の住所" %>
    <%= current_customer.postel_code + current_customer.address + current_customer.family_name + current_customer.first_name %>
  </h4>
</div>

<div class="">
  <h4>
    <%= f.radio_button :address, "登録済み住所から選択"%>
    <%= f.label :address, "登録済み住所から選択" %>
  </h4>
</div>


<div class="">
  <h4>
    <%= f.radio_button :address, "新しいお届け先"%>
    <%= f.label :address, "新しいお届け先" %>
  </h4>
</div>

<div class="">
  <%= f.label :post_code, "郵便番号(ハイフンなし)" %>
  <%= f.text_field :post_code %>
</div>

<div class="">
  <%= f.label :address, "住所" %>
  <%= f.text_field :address %>
</div>

<div class="">
  <%= f.label :name, "宛名" %>
  <%= f.text_field :name %>
</div>

<div class="">
  <%= f.submit :"確認画面へ進む", :class => "btn btn-primary" %>
</div>
<% end %>




