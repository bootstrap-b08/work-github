<div class="container-fluid">

    <div class = "row mt-5">
      <div class = "offset-md-2">
        <h3><span class = "px-4 bg-light">マイページ</span></h3>

        <div class="row　align-text-bottom pb-2 mt-5">
          <strong>登録情報</strong>
          <%= link_to '編集する',edit_customers_path, class: "btn btn-primary btn-sm px-1"  %>
          <%= link_to 'パスワードを変更する', edit_customer_registration_path, class: "btn btn-primary btn-sm" %>
        </div>
      <table class="table table-bordered">
        <tr>
          <th class="col-xs-3 table-active">氏名</th>
          <td class="col-xs-9"><%= @customer.family_name + "　" + @customer.first_name %></td>
        </tr>
        <tr>
          <th class="table-active">カナ</th>
          <td><%= @customer.family_name_kana + "　" + @customer.first_name_kana %></td>
        </tr>
        <tr>
          <th class="table-active">郵便番号</th>
          <td><%= @customer.postel_code %></td>
        </tr>
        <tr>
          <th class="table-active">住所</th>
          <td><%= @customer.address %></td>
        </tr>
        <tr>
          <th class="table-active">電話番号</th>
          <td><%= @customer.telephone_number %></td>
        </tr>
        <tr>
          <th class="table-active">メールアドレス</th>
          <td><%= @customer.email %></td>
        </tr>
      </table>
      <div class="row pb-2">
        <strong class="col-4">配送先 </strong>
        <div class="col-6">
          <%= link_to '一覧を見る', addresses_path, class: "btn btn-primary btn-sm w-100" %>
        </div>
      </div>
      <div class="row pb-2">
        <strong class="col-4">注文履歴</strong>
        <div class="col-6 ">
          <%= link_to '一覧を見る', orders_path, class: "btn btn-primary btn-sm w-100" %>
        </div>
      </div>

      </div>
    </div>
  </div>
</div>